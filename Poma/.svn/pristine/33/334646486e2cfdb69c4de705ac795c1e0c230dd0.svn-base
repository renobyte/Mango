<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="Theme.Mango_Light" parent="@style/Theme.Sherlock.Light">
        <item name="abBackground">@drawable/actionbar_background</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Actionbar.Title</item>
        <item name="abHeight">38dp</item>
        <item name="abDivider">@null</item>
    </style>

    <style name="Theme.Mango_Light_Honeycomb" parent="@style/Theme.Sherlock.Light">
        <item name="abBackground">@drawable/actionbar_background</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Actionbar.Title</item>
        <item name="abDivider">@null</item>
    </style>

    <style name="Theme.Mango_Dark" parent="@style/Theme.Sherlock">
        <item name="abBackground">@drawable/actionbar_background_dark</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Actionbar.TitleDark</item>
        <item name="abHeight">38dp</item>
        <item name="abDivider">@null</item>
    </style>

    <style name="Theme.Mango_Dark_Thin" parent="@style/Theme.Sherlock">
        <item name="abBackground">@drawable/actionbar_background_dark</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Actionbar.TitleDark</item>
        <item name="abHeight">30dp</item>
        <item name="abDivider">@null</item>
    </style>

    <style name="Theme.Mango_Dark_Honeycomb" parent="@style/Theme.Sherlock">
        <item name="abBackground">@drawable/actionbar_background_dark</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Actionbar.TitleDark</item>
        <item name="abDivider">@null</item>
    </style>

    <style name="TextAppearance.Actionbar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.Actionbar.TitleDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.Actionbar.TitleDarkThin" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.MangoDark" parent="android:Theme">
        <item name="android:textColor">#EEEEEE</item>
    </style>

</resources>