<?xml version="1.0" encoding="utf-8"?>
<com.ls.manga.ui.MangoLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:id="@+id/MainMenuLayout">
	<com.ls.manga.ui.MangoAdWrapperView
		android:id="@+id/mainmenuAdLayout"
		android:layout_alignParentTop="true"
		android:layout_height="50dip"
		android:layout_width="fill_parent"
		android:gravity="center_vertical|center_horizontal">
	</com.ls.manga.ui.MangoAdWrapperView>
	<LinearLayout
		android:layout_below="@id/mainmenuAdLayout"
		android:id="@+id/ListLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ListView
			android:id="@+id/MainMenuList"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:cacheColorHint="#00000000"
			android:fadingEdge="none">
		</ListView>
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal"
			android:text="No items to display!"
			android:id="@+id/mainMenuEmpty"
			android:textStyle="bold"
			android:textSize="16sp"
			android:visibility="gone"></TextView>
	</LinearLayout>
	<!--
		<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/menuToastOverlayContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:clipChildren="false"
		android:clipToPadding="false" android:visibility="gone">
	-->
	<RelativeLayout

		android:id="@+id/menuToastOverlay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:paddingTop="7dp"
		android:paddingBottom="7dp"
		android:paddingLeft="7dp"
		android:paddingRight="7dp"
		android:background="@drawable/toast_roundedcorners"
		android:clickable="true"
		android:clipChildren="false"
		android:clipToPadding="false"
		android:visibility="gone">
		<ImageView
			android:layout_marginTop="-8dp"
			android:layout_marginRight="-8dp"
			android:id="@+id/toastClose"
			android:src="@drawable/toast_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_above="@+id/menuToastOverlay"
			android:clickable="true"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:maxWidth="22dp"
			android:maxHeight="22dp" />
		<ImageView
			android:id="@+id/toastIcon"
			android:src="@drawable/bankai"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:clickable="true"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:maxWidth="45dp"
			android:maxHeight="45dp" />
		<TextView
			android:paddingLeft="6dp"
			android:layout_marginTop="3dp"
			android:layout_marginRight="6dp"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="This toast overlay hasn't been initialized.  This toast overlay hasn't been initialized.  This toast overlay hasn't been initialized."
			android:layout_toRightOf="@+id/toastIcon"
			android:id="@+id/toastText"
			android:textSize="14sp"
			android:textColor="#ffffff"></TextView>
	</RelativeLayout>
	<!-- </RelativeLayout>-->
	<include
		layout="@layout/tutorial_overlay"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
	</include>
</com.ls.manga.ui.MangoLayout>