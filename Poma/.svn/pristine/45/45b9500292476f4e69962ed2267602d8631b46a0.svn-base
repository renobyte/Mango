<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="3dp"
	android:id="@+id/NotificationLayout" android:paddingLeft="3dp">
	<ImageView
		android:id="@+id/NotificationLogo"
		android:layout_width="wrap_content"
		android:layout_marginRight="2dp"
		android:src="@drawable/icon"
		android:layout_height="wrap_content"
		android:maxHeight="35dp"
		android:maxWidth="35dp"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"/>
	<TextView
		android:id="@+id/NotificationText"
		android:layout_width="wrap_content"
		android:textColor="#000"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/NotificationLogo"
		android:textSize="14sp"
		android:text="History's Strongest Disciple Kenichi 43 (12 queued)"
		android:layout_marginTop="-2sp"/>
	<ProgressBar
		android:id="@+id/NotificationProgress"
		android:layout_marginTop="2sp"
		android:layout_marginBottom="2sp"
		android:indeterminateOnly="false"
		android:progressDrawable="@android:drawable/progress_horizontal"
		android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:minHeight="20sp"
		android:maxHeight="20sp" android:layout_below="@+id/NotificationLogo"></ProgressBar>
</RelativeLayout>
