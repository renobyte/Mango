<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_gravity="center_horizontal">
	<ScrollView
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		<RelativeLayout
			android:layout_gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:layout_centerInParent="true"
				android:id="@+id/TermsHeader"
				android:textSize="25sp"
				android:layout_alignParentTop="true"
				android:text="Terms of Service"></TextView>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1sp"
				android:background="#999999"
				android:layout_below="@+id/TermsHeader"
				android:id="@+id/TermsDivider" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/TermsDivider"
				android:id="@+id/TermsText"
				android:layout_marginRight="4sp"
				android:layout_marginLeft="4sp"
				android:text="Downloading Terms of Service..."></TextView>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/TermsButtonLayout"
				android:orientation="vertical"
				android:gravity="center_horizontal"
				android:layout_below="@+id/TermsText"
				android:layout_marginTop="10sp">
				<Button
					android:text="I Agree"
					android:id="@+id/TermsAgreeButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:minWidth="200sp"></Button>
				<Button
					android:text="I Disagree"
					android:id="@+id/TermsDisagreeButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:minWidth="200sp"></Button>
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>

</LinearLayout>
