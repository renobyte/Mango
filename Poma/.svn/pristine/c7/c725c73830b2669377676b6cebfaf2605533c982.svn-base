<?xml version="1.0" encoding="utf-8"?>
<com.ls.manga.ui.MangoLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:layout_height="fill_parent">
	<com.ls.manga.ui.MangoAdWrapperView
		android:id="@+id/favoritesAdLayout"
		android:layout_alignParentTop="true"
		android:layout_height="50dip"
		android:layout_width="fill_parent"
		android:gravity="center_vertical|center_horizontal">
	</com.ls.manga.ui.MangoAdWrapperView>
	<RelativeLayout
		android:id="@+id/favoritesFilterOverlay"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentTop="true"
		android:background="#8C000000">
		<EditText
			android:layout_marginTop="3dp"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:inputType="textFilter"
			android:id="@+id/favoritesFilterEdit"
			android:hint="Type to filter...">
		</EditText>
		<ImageButton
			android:id="@+id/favoritesFilterButton"
			android:src="@drawable/toolbar_find"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="-10dp"
			android:minWidth="70dp"
			android:minHeight="50dp"
			android:background="@null"></ImageButton>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/favoritesListLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/favoritesAdLayout">
		<ListView
			android:id="@+id/favoritesList"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:cacheColorHint="#00000000"
			android:fadingEdge="none">
		</ListView>
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal"
			android:text="No favorites to display!"
			android:id="@+id/favoritesEmpty"
			android:textStyle="bold"
			android:textSize="16sp"></TextView>
	</LinearLayout>
	<include
		layout="@layout/tutorial_overlay"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
	</include>
</com.ls.manga.ui.MangoLayout>