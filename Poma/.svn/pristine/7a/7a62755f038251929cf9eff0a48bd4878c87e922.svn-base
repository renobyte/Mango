<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="2dp"
	android:background="#ffffff">
	<LinearLayout
		android:id="@+id/bankaiLayout2"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:orientation="vertical"
		android:gravity="center">
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Purchase Bankai"
			android:id="@+id/bankaiPurchase"
			android:minWidth="250dp"
			android:layout_centerHorizontal="true"></Button>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Activate Bankai"
			android:id="@+id/bankaiButton"
			android:minWidth="250dp"
			android:layout_centerHorizontal="true"></Button>
	</LinearLayout>
	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/bankaiRetrieveScrollView"
		android:layout_above="@id/bankaiLayout2"
		android:layout_alignParentTop="true"
		android:visibility="gone">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<TextView
				android:text="Activate Bankai"
				android:textSize="32sp"
				android:layout_width="fill_parent"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:gravity="center"></TextView>
			<View
				android:layout_height="1sp"
				android:layout_width="fill_parent"
				android:id="@+id/view1"
				android:background="#999999"></View>
			<TextView
				android:text="If you've previously purchased Mango Bankai (ad-free), this screen will let you reactivate it for free on this device."
				android:layout_width="wrap_content"
				android:paddingBottom="6dp"
				android:paddingTop="3dp"
				android:layout_height="wrap_content"></TextView>
			<TextView
				android:text="Each order number can only be associated with one device.  If you have a second device and would like another key, please email me."
				android:layout_width="wrap_content"
				android:paddingBottom="6dp"
				android:layout_height="wrap_content"></TextView>
			<TextView
				android:text="You can find your order number by going to checkout.google.com.  Then, find your Mango Bankai purchase and click 'View Order'."
				android:layout_width="wrap_content"
				android:paddingBottom="6dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
			<TextView
				android:text="PayPal users should enter their transaction IDs instead, without letters.  If you need help, please email mango@leetsoft.net."
				android:layout_width="wrap_content"
				android:paddingBottom="6dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
			<TextView
				android:text="Your device ID is:"
				android:layout_width="wrap_content"
				android:paddingTop="5dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textStyle="bold"
				android:layout_gravity="center"></TextView>
			<TextView
				android:text="000"
				android:layout_width="wrap_content"
				android:paddingBottom="2dp"
				android:layout_height="wrap_content"
				android:id="@+id/bankaiTextView"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
			<EditText
				android:layout_height="wrap_content"
				android:id="@+id/bankaiOrderNum"
				android:layout_width="match_parent"
				android:inputType="number">
			</EditText>
		</LinearLayout>
	</ScrollView>
	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/bankaiMenuScrollView"
		android:layout_above="@id/bankaiLayout2"
		android:layout_alignParentTop="true"
		android:visibility="gone">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<TextView
				android:text="Mango Bankai"
				android:textSize="32sp"
				android:layout_width="fill_parent"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:gravity="center"></TextView>
			<View
				android:layout_height="1sp"
				android:layout_width="fill_parent"
				android:id="@+id/view1"
				android:background="#999999"></View>
			<ImageView
				android:layout_width="wrap_content"
				android:src="@drawable/bankai"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"></ImageView>
			<TextView
				android:text="Mango Bankai is the ad-free version of Mango.  You can purchase it via PayPal to remove the annoying ads in Mango's menus, and you'll be helping me pay for college too!"
				android:layout_width="wrap_content"
				android:paddingBottom="6dp"
				android:paddingTop="3dp"
				android:layout_height="wrap_content"></TextView>
			<TextView
				android:text="If you've already purchased Mango Bankai in the past, you can also activate it for free via this menu."
				android:layout_width="wrap_content"
				android:paddingBottom="15dp"
				android:paddingTop="3dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
			<TextView
				android:text="Choose an option below."
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
		</LinearLayout>
	</ScrollView>
	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/bankaiInfoScrollView"
		android:layout_above="@id/bankaiLayout2"
		android:layout_alignParentTop="true"
		android:visibility="visible">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<TextView
				android:text="Mango Bankai"
				android:textSize="32sp"
				android:layout_width="fill_parent"
				android:textStyle="bold"
				android:layout_height="wrap_content"
				android:gravity="center"></TextView>
			<View
				android:layout_height="1sp"
				android:layout_width="fill_parent"
				android:id="@+id/view1"
				android:background="#999999"></View>
			<ImageView
				android:layout_width="wrap_content"
				android:src="@drawable/bankai"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"></ImageView>
			<TextView
				android:text="Mango Bankai is already activated on this device; you shouldn't be seeing ads while using the app."
				android:layout_width="wrap_content"
				android:paddingBottom="6dp"
				android:paddingTop="3dp"
				android:layout_height="wrap_content"></TextView>
			<TextView
				android:text="Thanks for your support, you rock!  If you need more assistance, please email mango@leetsoft.net."
				android:layout_width="wrap_content"
				android:paddingBottom="15dp"
				android:paddingTop="3dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
			<TextView
				android:text="Registration Information:"
				android:layout_width="wrap_content"
				android:paddingTop="5dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textStyle="bold"
				android:layout_gravity="center"></TextView>
			<TextView
				android:text="000"
				android:layout_width="wrap_content"
				android:paddingBottom="2dp"
				android:layout_height="wrap_content"
				android:id="@+id/bankaiInfoText"
				android:layout_weight="1"
				android:layout_gravity="center"></TextView>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
