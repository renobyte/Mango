<?xml version="1.0" encoding="utf-8"?>
<net.leetsoft.mangareader.ui.MangoLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/queueScreenLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/queueScreenList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:cacheColorHint="#00000000"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none" >
        </ListView>

        <TextView
            android:id="@+id/queueScreenEmpty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="The download queue is empty."
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

</net.leetsoft.mangareader.ui.MangoLayout>